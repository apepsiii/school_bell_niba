    {
      "src": "/static/icons/icon-512x512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "maskable any"
    }
  ],
  "shortcuts": [
    {
      "name": "Jadwal",
      "short_name": "Jadwal",
      "description": "Lihat dan kelola jadwal bel",
      "url": "/schedules",
      "icons": [
        {
          "src": "/static/icons/schedule-icon-96.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Pengumuman",
      "short_name": "Pengumuman",
      "description": "Putar pengumuman manual",
      "url": "/announcements",
      "icons": [
        {
          "src": "/static/icons/announce-icon-96.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Audio",
      "short_name": "Audio",
      "description": "Kelola file audio",
      "url": "/audio",
      "icons": [
        {
          "src": "/static/icons/audio-icon-96.png",
          "sizes": "96x96"
        }
      ]
    }
  ],
  "screenshots": [
    {
      "src": "/static/screenshots/desktop-1.png",
      "sizes": "1280x720",
      "type": "image/png",
      "form_factor": "wide",
      "label": "Dashboard tampilan desktop"
    },
    {
      "src": "/static/screenshots/mobile-1.png",
      "sizes": "375x667",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Dashboard tampilan mobile"
    }
  ],
  "related_applications": [],
  "prefer_related_applications": false,
  "edge_side_panel": {
    "preferred_width": 400
  },
  "launch_handler": {
    "client_mode": "focus-existing"
  },
  "protocol_handlers": [
    {
      "protocol": "web+schoolbell",
      "url": "/?action=%s"
    }
  ],
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "audio",
          "accept": ["audio/mp3", "audio/wav", "audio/ogg"]
        }
      ]
    }
  },
  "file_handlers": [
    {
      "action": "/audio/upload",
      "accept": {
        "audio/mp3": [".mp3"],
        "audio/wav": [".wav"],
        "audio/ogg": [".ogg"]
      }
    }
  ]
}